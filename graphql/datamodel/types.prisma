type User {
  id: ID! @unique
  username: String! @unique
  password: String!
  role:Role!
  profile: Profile!
  createdAt: DateTime!
  updatedAt:DateTime!
  transactions: [Quote!]!
}

type Profile {
	id: ID! @unique
	login: User
	firstName: String!
	middleName: String
	lastName: String!
	birthdate: DateTime!
	gender: Gender!
	contactInfo: ContactInfo!
	position: Position!
	employer: Company!
	address: Address
	station: Branch!
	files: [File!]!
	logs:[Log!]!
	technician: [Quote!]! @relation(name:"TransactionTechnician")
	assistant: [Quote!]! @relation(name:"TransactionAssistant")
}

type ContactInfo {
	owner: Profile!
	email: String! @unique
	primaryTel: String
	secondaryTel: String
	primaryMobile: String
	secondaryMobile: String
}

type Company {
	companyName: String! @unique
	about: String
	branches: [Branch!]!	
	clients: Company @relation(name:"ExternalRelations")
	suppliers: Company @relation(name:"ExternalRelations")	
	sender: [Delivery!]! @relation(name:"DeliverySender")
	receiver: [Delivery!]! @relation(name:"DeliveryReceiver")
}

type Address {
	address1: String!
	address2: String
	barangay: String!
	city: String!
	province: String!
	zip: Int
}

type Branch {
	owner: Company!
	type: BranchType!
	branchName: String! @unique
	address: Address!
	contactInfo: ContactInfo!
	manager: Profile!
}

type Log {
	user: [User!]!
	sourceTable: String!
	sourceId: String!
	actionNo: String!
	actionType: String!
	actionTitle: String!
	tableField: String!
	oldValue: String!
	newValue: String!
	comment: String
	createdAt: DateTime!
}

type File {
	fileType: String!
	fileName: String!
	fileSize: String!
	filePath: String!
}

type Product {
	type: ProductType!
	category: Category!
	subCategory: SubCategory
	brand: Brand
	productName: String! @unique
	barcode: Int!
	qrcode: QRCode
	desc: String
	attributes: [Attribute!]!
	slug: String! @unique
	srp: ProductSrp!
	purchasePrice: PurchasePrice!
	stocks: [Stock!]!
}

type Attribute {
	product: Product!
	attributeName: AttributeType!
	value: String!	
}

type Category {
	catName: String! @unique
	catDesc: String
	products: [Product!]!
}

type SubCategory {
	category: Category!
	subCatName: String! @unique
	subCatDesc: String
	products: [Product!]!
}

type Brand {
	brandName: String! @unique
	manufacturer: String
	products: [Product!]!
}

type QRCode {
	qrcode: String! @unique
	product: Product!	
}

type ProductSrp {
	product: Product!
	price: Float!
}
type PurchasePrice {
	product: Product!
	price: Float!
}

type Stock {
	sku: String! @unique
	product: Product!
	warehouse: Branch!
	units: Int!
	inventory: Inventory
}

type Inventory {
	product: Stock!
	items: [Item!]!
}

type Transaction {
	id: ID! @unique
	type: TransactionType!
	refNo: Transaction
	receiptNo: Int!
	order: Order
	quote: Quote!
	isPaid: Boolean!
	balance: Float!
	createdAt: DateTime!
	updatedAt: DateTime!
}

type Order {
	transaction: Transaction!
	delivery: Delivery!
	status: OrderStatus!
	owner: Profile!
}

type Delivery {
	orders: Order!
	sender: Company! @relation(name:"DeliverySender")
	receiver: Company! @relation(name:"DeliveryReceiver")
	status: DeliveryStatus!
}

type Quote {
	transaction: Transaction!
	cashier: User! 
	technician: Profile @relation(name:"TransactionTechnician")
	assistant: Profile @relation(name:"TransactionsAssistant")
	descriptions: [Item!]!
	grossAmount: Float!
	isDiscounted: Boolean!
	discountedAmount: Float!
	netAmount: Float!
	amountPaid: Float!
	createdAt: DateTime!
	updatedAt: DateTime!
}

type Item {
	transaction: Transaction!
	inventory: Inventory!
	srp: ProductSrp
	purchasePrice: PurchasePrice
	units: Int!
	amount: Float!	
	createdAt: DateTime!
	updatedAt: DateTime!
}

